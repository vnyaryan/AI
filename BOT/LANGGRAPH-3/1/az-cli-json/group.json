{
    "command_group": "az group",
    "description": "Manage resource groups and template deployments.",
    "status": "GA",
    "commands": [
        {
            "name": "az group create",
            "summary": "Create a new resource group.",
            "syntax": "az group create --location\n                --name\n                [--managed-by]\n                [--tags]",
            "required_parameters": [
                "--location -l",
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [
                "--managed-by",
                "--tags"
            ],
            "examples": [
                "az group create -l westus -n MyResourceGroup"
            ]
        },
        {
            "name": "az group delete",
            "summary": "Delete a resource group.",
            "syntax": "az group delete --name\n                [--force-deletion-types {Microsoft.Compute/virtualMachineScaleSets, Microsoft.Compute/virtualMachines, Microsoft.Databricks/workspaces}]\n                [--no-wait]\n                [--yes]",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [
                "--force-deletion-types -f",
                "--no-wait",
                "--yes -y"
            ],
            "examples": [
                "az group delete -n MyResourceGroup",
                "az group delete -n MyResourceGroup --force-deletion-types Microsoft.Compute/virtualMachines"
            ]
        },
        {
            "name": "az group exists",
            "summary": "Check if a resource group exists.",
            "syntax": "az group exists --name",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [],
            "examples": [
                "az group exists -n MyResourceGroup"
            ]
        },
        {
            "name": "az group export",
            "summary": "Captures a resource group as a template.",
            "syntax": "az group export --name\n                [--include-comments]\n                [--include-parameter-default-value]\n                [--resource-ids]\n                [--skip-all-params]\n                [--skip-resource-name-params]",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [
                "--include-comments",
                "--include-parameter-default-value",
                "--resource-ids",
                "--skip-all-params",
                "--skip-resource-name-params"
            ],
            "examples": []
        },
        {
            "name": "az group list",
            "summary": "List resource groups.",
            "syntax": "az group list [--tag]",
            "required_parameters": [],
            "optional_parameters": [
                "--tag"
            ],
            "examples": [
                "az group list --query \"[?location=='westus']\""
            ]
        },
        {
            "name": "az group show",
            "summary": "Gets a resource group.",
            "syntax": "az group show --name",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [],
            "examples": []
        },
        {
            "name": "az group update",
            "summary": "Update a resource group.",
            "syntax": "az group update --name\n                [--force-string]\n                [--set]\n                [--tags]",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [
                "--force-string",
                "--set",
                "--tags"
            ],
            "examples": [
                "az group update --resource-group MyResourceGroup --set tags.CostCenter='{\"Dept\":\"IT\",\"Environment\":\"Test\"}'"
            ]
        },
        {
            "name": "az group wait",
            "summary": "Place the CLI in a waiting state until a condition of the resource group is met.",
            "syntax": "az group wait --name\n              [--created]\n              [--custom]\n              [--deleted]\n              [--exists]\n              [--interval]\n              [--timeout]\n              [--updated]",
            "required_parameters": [
                "--name --resource-group -g -n"
            ],
            "optional_parameters": [
                "--created",
                "--custom",
                "--deleted",
                "--exists",
                "--interval",
                "--timeout",
                "--updated"
            ],
            "examples": [
                "az group wait --created  --resource-group MyResourceGroup",
                "az group wait --deleted --resource-group MyResourceGroup"
            ]
        }
    ]
}