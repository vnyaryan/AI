{
    "command_group": "az communication chat thread",
    "description": "Commands to manage chat thread of a Communication Service resource.",
    "status": "Preview",
    "commands": [
        {
            "name": "az communication chat thread create",
            "summary": "Creates a chat thread.",
            "syntax": "az communication chat thread create --topic\n                                    [--access-token]\n                                    [--endpoint]\n                                    [--idempotency-token]",
            "required_parameters": [
                "--topic"
            ],
            "optional_parameters": [
                "--access-token",
                "--endpoint",
                "--idempotency-token"
            ],
            "examples": [
                "az communication chat thread create --topic \"chat-topic\""
            ]
        },
        {
            "name": "az communication chat thread delete",
            "summary": "Deletes a chat thread.",
            "syntax": "az communication chat thread delete --thread\n                                    [--access-token]\n                                    [--endpoint]\n                                    [--yes]",
            "required_parameters": [
                "--thread -t"
            ],
            "optional_parameters": [
                "--access-token",
                "--endpoint",
                "--yes -y"
            ],
            "examples": [
                "az communication chat thread delete --thread \"19:a-bcd=xyz\""
            ]
        },
        {
            "name": "az communication chat thread list",
            "summary": "Gets the list of chat threads of a user.",
            "syntax": "az communication chat thread list [--access-token]\n                                  [--endpoint]\n                                  [--start-time]",
            "required_parameters": [],
            "optional_parameters": [
                "--access-token",
                "--endpoint",
                "--start-time"
            ],
            "examples": [
                "az communication chat thread list"
            ]
        },
        {
            "name": "az communication chat thread update-topic",
            "summary": "Updates the topic of a chat thread.",
            "syntax": "az communication chat thread update-topic --thread\n                                          --topic\n                                          [--access-token]\n                                          [--endpoint]",
            "required_parameters": [
                "--thread -t",
                "--topic"
            ],
            "optional_parameters": [
                "--access-token",
                "--endpoint"
            ],
            "examples": [
                "az communication chat thread update-topic --thread \"19:a-bcd=xyz\" --topic \"New topic!\""
            ]
        }
    ]
}