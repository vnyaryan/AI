{
    "command_group": "az ad sp",
    "description": "Manage Microsoft Entra service principals.",
    "status": "GA",
    "commands": [
        {
            "name": "az ad sp create",
            "summary": "Create a service principal.",
            "syntax": "az ad sp create --id",
            "required_parameters": [
                "--id"
            ],
            "optional_parameters": [],
            "examples": [
                "az ad sp create --id 00000000-0000-0000-0000-000000000000"
            ]
        },
        {
            "name": "az ad sp create-for-rbac",
            "summary": "Create a service principal and configure its access to Azure resources.",
            "syntax": "az ad sp create-for-rbac [--cert]\n                         [--create-cert]\n                         [--display-name]\n                         [--json-auth {false, true}]\n                         [--keyvault]\n                         [--role]\n                         [--scopes]\n                         [--years]",
            "required_parameters": [],
            "optional_parameters": [
                "--cert",
                "--create-cert",
                "--display-name --name -n",
                "--json-auth --sdk-auth",
                "--keyvault",
                "--role",
                "--scopes",
                "--years"
            ],
            "examples": [
                "az ad sp create-for-rbac",
                "az ad sp create-for-rbac -n MyApp",
                "az ad sp create-for-rbac -n MyApp --role Contributor --scopes /subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/resourceGroup1 /subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/resourceGroup2",
                "az ad sp create-for-rbac --create-cert",
                "az ad sp create-for-rbac --cert \"MIICoT...\"",
                "az ad sp create-for-rbac --cert \"@~/cert.pem\"\n`cert.pem` contains the following content\n-----BEGIN CERTIFICATE-----  <<< this line is optional\nMIICoT...\n-----END CERTIFICATE-----    <<< this line is optional",
                "az ad sp create-for-rbac --keyvault MyVault --cert CertName --create-cert",
                "az ad sp create-for-rbac --keyvault MyVault --cert CertName"
            ]
        },
        {
            "name": "az ad sp delete",
            "summary": "Delete a service principal.",
            "syntax": "az ad sp delete --id",
            "required_parameters": [
                "--id"
            ],
            "optional_parameters": [],
            "examples": [
                "az ad sp delete --id 00000000-0000-0000-0000-000000000000"
            ]
        },
        {
            "name": "az ad sp list",
            "summary": "List service principals.",
            "syntax": "az ad sp list [--all]\n              [--display-name]\n              [--filter]\n              [--show-mine]\n              [--spn]",
            "required_parameters": [],
            "optional_parameters": [
                "--all",
                "--display-name",
                "--filter",
                "--show-mine",
                "--spn"
            ],
            "examples": []
        },
        {
            "name": "az ad sp show",
            "summary": "Get the details of a service principal.",
            "syntax": "az ad sp show --id",
            "required_parameters": [
                "--id"
            ],
            "optional_parameters": [],
            "examples": [
                "az ad sp show --id 00000000-0000-0000-0000-000000000000",
                "az ad sp show --id 00000000-0000-0000-0000-000000000000",
                "az ad sp show --id api://myapp"
            ]
        },
        {
            "name": "az ad sp update",
            "summary": "Update a service principal.",
            "syntax": "az ad sp update --id\n                [--add]\n                [--force-string]\n                [--remove]\n                [--set]",
            "required_parameters": [
                "--id"
            ],
            "optional_parameters": [
                "--add",
                "--force-string",
                "--remove",
                "--set"
            ],
            "examples": [
                "az ad sp update --id 00000000-0000-0000-0000-000000000000 --set groupMembershipClaims=All"
            ]
        }
    ]
}