{
    "command_group": "az sphere hardware-definition",
    "description": "Manage hardware definitions.",
    "status": "GA",
    "commands": [
        {
            "name": "az sphere hardware-definition generate-header",
            "summary": "Generate a C header file corresponding to a hardware definition and place it in the folder 'inc/hw' relative to the input JSON.",
            "syntax": "az sphere hardware-definition generate-header --hardware-definition-file",
            "required_parameters": [
                "--hardware-definition-file"
            ],
            "optional_parameters": [],
            "examples": [
                "az sphere hardware-definition generate-header --hardware-definition-file mt3620.json"
            ]
        },
        {
            "name": "az sphere hardware-definition test-header",
            "summary": "Test that the C header file in the 'inc/hw' folder is up-to-date with respect to the input JSON.",
            "syntax": "az sphere hardware-definition test-header --hardware-definition-file",
            "required_parameters": [
                "--hardware-definition-file"
            ],
            "optional_parameters": [],
            "examples": [
                "az sphere hardware-definition test-header --hardware-definition-file mt3620.json"
            ]
        }
    ]
}