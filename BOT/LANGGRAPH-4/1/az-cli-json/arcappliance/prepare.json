            "syntax": "az arcappliance prepare scvmm --config-file\n                              [--address]\n                              [--location]\n                              [--name]\n                              [--password]\n                              [--port]\n                              [--resource-group]\n                              [--username]",
            "required_parameters": [
                "--config-file"
            ],
            "optional_parameters": [
                "--address",
                "--location -l",
                "--name -n",
                "--password",
                "--port",
                "--resource-group -g",
                "--username"
            ],
            "examples": [
                "az arcappliance prepare scvmm --config-file [REQUIRED] --address [OPTIONAL] --port [OPTIONAL] --username [OPTIONAL] --password [OPTIONAL]"
            ]
        },
