{
    "command_group": "az acr pack",
    "description": "Manage Azure Container Registry Tasks that use Cloud Native Buildpacks.",
    "status": "Preview",
    "commands": [
        {
            "name": "az acr pack build",
            "summary": "Queues a quick build task that builds an app and pushes it into an Azure Container Registry.",
            "syntax": "az acr pack build --builder\n                  --image\n                  --registry\n                  [--agent-pool]\n                  [--auth-mode {Default, None}]\n                  [--no-format]\n                  [--no-logs]\n                  [--no-wait]\n                  [--pack-image-tag]\n                  [--platform]\n                  [--pull]\n                  [--resource-group]\n                  [--timeout]\n                  [<SOURCE_LOCATION>]",
            "required_parameters": [
                "--builder -b",
                "--image -t",
                "--registry -r"
            ],
            "optional_parameters": [
                "--agent-pool",
                "--auth-mode",
                "--no-format",
                "--no-logs",
                "--no-wait",
                "--pack-image-tag",
                "--platform",
                "--pull",
                "--resource-group -g",
                "--timeout",
                "<SOURCE_LOCATION>"
            ],
            "examples": [
                "az acr pack build -r myregistry -t {{.Run.Registry}}/node-app:{{.Run.ID}} --builder cloudfoundry/cnb:bionic .",
                "az acr pack build -r myregistry -t {{.Run.Registry}}/node-app:{{.Run.ID}} --pull --builder heroku/buildpacks:18 https://github.com/Azure-Samples/nodejs-docs-hello-world.git"
            ]
        }
    ]
}