{
    "command_group": "az stack-hci-vm gpu",
    "description": "Manage gpus with stack-hci-vm.",
    "status": "GA",
    "commands": [
        {
            "name": "az stack-hci-vm gpu attach",
            "summary": "Attach gpu to a VM (preview feature).",
            "syntax": "az stack-hci-vm gpu attach --resource-group\n                           --vm-name\n                           [--gpu-dda-count]\n                           [--gpu-p-count]\n                           [--gpus]\n                           [--yes]",
            "required_parameters": [
                "--resource-group -g",
                "--vm-name"
            ],
            "optional_parameters": [
                "--gpu-dda-count",
                "--gpu-p-count",
                "--gpus",
                "--yes -y"
            ],
            "examples": [
                "az stack-hci-vm gpu attach --resource-group \"test-rg\" --vm-name \"test-vm\" --gpus GpuDDA,0 GpuDDA,0",
                "az stack-hci-vm gpu attach --resource-group \"test-rg\" --vm-name \"test-vm\" --gpu-dda-count 2",
                "az stack-hci-vm gpu attach --resource-group \"test-rg\" --vm-name \"test-vm\" --gpu-p-count 1"
            ]
        },
        {
            "name": "az stack-hci-vm gpu detach",
            "summary": "Detach gpu from a VM (preview feature).",
            "syntax": "az stack-hci-vm gpu detach --resource-group\n                           --vm-name\n                           [--gpu]\n                           [--yes]",
            "required_parameters": [
                "--resource-group -g",
                "--vm-name"
            ],
            "optional_parameters": [
                "--gpu",
                "--yes -y"
            ],
            "examples": [
                "az stack-hci-vm gpu detach --resource-group \"test-rg\" --vm-name \"test-vm\" --gpu \"GpuDDA,0\"",
                "az stack-hci-vm gpu detach --resource-group \"test-rg\" --vm-name \"test-vm\""
            ]
        }
    ]
}